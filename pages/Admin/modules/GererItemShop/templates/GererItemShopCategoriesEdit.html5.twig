<div class="box box-default flat" style="margin-bottom: 0px;">

    <div class="box-header">
        {% if objItemshopCategories.getCat > 0 %}
            <h3 class="box-title">Modification d'une catégorie</h3>
        {% else %}
            <h3 class="box-title">Ajout d'une catégorie</h3>
        {% endif %}
    </div>

    <input type="hidden" id="categorieCat" value="{{ objItemshopCategories.getCat }}">

    <div class="box-body no-padding" style="padding-top: 10px !important;">
        
        <div class="row" style="padding-left: 15px; margin-right: 0;">
            <div class="col-sm-6">
                <div class="form-group ">
                    <label for="categorieNom">
                        Nom
                    </label>

                    <div class="input-group col-xs-12">
                        <input type="text" id="categorieNom" class="form-control input-sm text" value="{{ objItemshopCategories.getNom }}" required >
                    </div>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="form-group ">
                    <label for="categorieDescription">
                        Description
                    </label>

                    <div class="input-group col-xs-12">
                        <textarea style="resize: none; min-height: 100px; min-width: 250px;" id="categorieDescription" class="form-control input-sm">{{ objItemshopCategories.getDescription }}</textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="box-footer">
        <div class="pull-left">
            <input type="button" class="btn btn-danger btn-flat" onclick="$.featherlight.close();" value="Fermer" />
        </div>
        <div class="pull-right">
            <input type="button" class="btn btn-success btn-flat" onclick="EnregistrementCategorie();" value="Enregistrer" />
        </div>
    </div>

    <script type="text/javascript">

        function EnregistrementCategorie() {

            displayLoading();

            $.ajax({
                type: "POST",
                url: "pages/Admin/modules/GererItemShop/ajax/ajaxGererItemShopCategoriesEditSave.php",
                data: {
                    "categorieCat": $("#categorieCat").val(),
                    "categorieNom": $("#categorieNom").val(),
                    "categorieDescription": $("#categorieDescription").val(),
                },
                success: function (msg) {
                    hideLoading();
                    $.featherlight.close();
                    parent.oTable.fnStandingRedraw();
                }

            });
        }
    </script>
</div>