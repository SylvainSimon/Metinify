<script type="text/javascript" src="pages/Classements/js/fonctions.min.js"></script>

<div class="box box-default flat">

    <div class="box-header">
        <h3 class="box-title">Classement map PVP</h3>

    </div>

    <div class="box-body no-padding">

        <div class="row" style="padding: 10px;">
            <div class="col-md-4">
                <input type="text" class="form-control input-sm inline" autofocus="autofocus" placeholder="Pseudo..." id="SaisieRecherche"/>
            </div>
            <div class="col-md-2">
                <input type="submit" class="btn btn-primary btn-flat btn-sm inline" onclick="Recherche_Joueurs_PVP($('#SaisieRecherche').val());" value="Rechercher"/>
            </div>
        </div>

        <div id="Changement_de_Page">

            <table class="table table-condensed table-hover" style="border-collapse: collapse; margin-bottom: 5px;"> 
                <thead>
                    <tr>
                        <th style="width: 15px;" align="center"></th>
                        <th style="width: 15px;">Race</th>
                        <th>Pseudo</th>
                        <th class="hidden-md hidden-sm hidden-xs">Level</th>
                        <th class="hidden-md hidden-sm hidden-xs">Expérience</th>
                        <th>Classe</th>
                        <th>PVP</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="pagedeclassement">

                    {% if arrObjPlayers|length > 0 %}

                        {% for objPlayers in arrObjPlayers %}
                            <tr>
                                <td align="center">
                                    {% if place == 1 %}
                                        <i class="material-icons md-icon-star" style="color:#F3EC12;"></i>
                                    {% elseif place == 2 %}
                                        <i class="material-icons md-icon-star text-gray"></i>
                                    {% elseif place == 3 %}
                                        <i class="material-icons md-icon-star" style="color:#813838;"></i>
                                    {% elseif place == 4 %}
                                        <i class="material-icons md-icon-bookmark" style="color:#F3EC12; opacity: 0.5"></i>
                                    {% elseif place == 5 %}
                                        <i class="material-icons md-icon-bookmark text-gray" style="opacity: 0.5"></i>
                                    {% elseif place == 6 %}
                                        <i class="material-icons md-icon-bookmark" style="color:#813838; opacity: 0.5"></i>
                                    {% else %}
                                        {{ place }}
                                    {% endif %}
                                </td>

                                <td>
                                    {{ findIconJob(objPlayers.job)|raw }}
                                </td>

                                <td>
                                    {{ objPlayers.name }}
                                </td>
                                <td class="hidden-md hidden-sm hidden-xs">
                                    {{ objPlayers.level }}
                                </td>
                                <td  class="hidden-md hidden-sm hidden-xs">
                                    {{ objPlayers.exp|number_format }}
                                </td>

                                <td>
                                    {% if objPlayers.job == 0 or objPlayers.job == 4 %}
                                        {% if objPlayers.skillGroup == 1 %}
                                            Corps à Corps
                                        {% elseif objPlayers.skillGroup == 2 %}
                                            Mental
                                        {% else %}
                                            Non-définie
                                        {% endif %}
                                    {% elseif objPlayers.job == 1 or objPlayers.job == 5 %}
                                        {% if objPlayers.skillGroup == 1 %}
                                            Assasin
                                        {% elseif objPlayers.skillGroup == 2 %}
                                            Archer
                                        {% else %}
                                            Non-définie
                                        {% endif %}
                                    {% elseif objPlayers.job == 2 or objPlayers.job == 6 %}
                                        {% if objPlayers.skillGroup == 1 %}
                                            Arme magique
                                        {% elseif objPlayers.skillGroup == 2 %}
                                            Magie Noir
                                        {% else %}
                                            Non-définie
                                        {% endif %}
                                    {% elseif objPlayers.job == 3 or objPlayers.job == 7 %}
                                        {% if objPlayers.skillGroup == 1 %}
                                            Dragon
                                        {% elseif objPlayers.skillGroup == 2 %}
                                            Soin
                                        {% else %}
                                            Non-définie
                                        {% endif %}
                                    {% else %}
                                        Non-définie
                                    {% endif %}
                                </td>

                                <td>
                                    {{ objPlayers.victimesPvp }}
                                </td>

                                <td style="width: 70px;">
                                    {{ findIconEmpire(objPlayers.empire)|raw }}
                                    
                                    {% if objPlayers.online == 0 %}
                                        <span data-tooltip="Hors-ligne" data-tooltip-position="left" class="pull-right">
                                            <i class="text-red material-icons md-icon-account-circle"></i>
                                        </span>
                                    {% else %}
                                        <span data-tooltip="En ligne" data-tooltip-position="left" class="pull-right">
                                            <i class="text-green material-icons md-icon-account-circle"></i>
                                        </span>
                                    {% endif %}
                                </td>

                            </tr>
                            {% set place = (place + 1) %}
                        {% endfor %}
                    {% else %}
                        Aucun joueur
                    {% endif %}
                </tbody>
            </table>

            <div class="row" style="padding: 10px;">
                <div class="col-xs-6">
                    <div class="pull-left">
                        {% if numPage > 0 %}
                            <a href="javascript:void(0)" onclick="Ajax_Classement('pages/Classements/ajax/ClassementJoueursPvPPage.php?page={{ (numPage-1) }}');">Page précédente</a>
                        {% endif %}
                    </div>
                </div>

                <div class="col-xs-6">
                    <div class="pull-right">
                        {% if numPage <= totalPage %}
                            <a href="javascript:void(0)" onclick="Ajax_Classement('pages/Classements/ajax/ClassementJoueursPvPPage.php?page={{ (numPage+1) }}');">Page suivante</a>
                        {% endif %}
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>