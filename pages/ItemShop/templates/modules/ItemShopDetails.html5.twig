<div class="box box-default flat">

    <div class="box-header">
        <h3 class="box-title">Magasin d'items - Détails</h3>

        <div class="box-tools">
            <a href="pages/ItemShop/ItemShopRechargement.php?idcompte={{ session.get('ID') }}&nomCompte={{ session.get('Utilisateur') }}" class="fancybox_Rechargement btn btn-sm btn-primary btn-flat" data-fancybox-type="iframe">Recharger</a>
        </div>
    </div>

    <div id="ContenantAchat">
        <div class="box-body">

            <div style="margin-bottom: 16px;">{{ objItemShop.getNameItem }}</div>

            {% if imgItem.1 > imgItem.0 %}
                <img class="Position_Icone_Article_1Case_Grande" src="../../images/items/{{ objItemShop.getIdItem }}.png" width="32" />
            {% else %}
                <img class="Position_Icone_Article_1Case_Petite" src="../../images/items/{{ objItemShop.getIdItem }}.png" width="32" />
            {% endif %}

            <div style="margin-top: 16px;">   
                {% if objItemShop.getFullDescription == "" %}
                    {{ objItemShop.getInfoItem }}
                {% else %}
                    {{ objItemShop.getFullDescription }}
                {% endif %}
            </div>

            <div class="Rappel_Prix_Unité pull-right" style="display: inline; margin-top: 15px;">
                Total à payer : <span id="Prix">{{ objItemShop.getPrix|number_format }}</span>

                {% if objItemShop.getCat == 7 %}
                    <i style="top: 4px; position: relative;" class="material-icons md-icon-whatshot md-24 text-gray" title=""></i>
                {% else %}
                    <i style="top: 4px; position: relative;" class="material-icons md-icon-whatshot md-24 text-yellow" title=""></i>
                {% endif %}
            </div>
        </div>

        <div class="box-footer">

            {% if objItemShop.getCat == 8 %}
                <div class="pull-left">
                    <select  class="form-control" disabled="disabled" id="Selecteur_Nombre">
                        <option value="1" selected="selected">x1 ({{ objItemShop.getNbItem }} jours)</option>
                    </select>
                </div>

                <div class="pull-right">
                    <button onclick="Valider_Mon_Achat({{ objItemShop.getId }}, $('#Selecteur_Nombre').val())" class="btn btn-primary btn-flat">
                        Payer
                    </button>
                </div>
            {% else %}
                <div class="pull-left">

                    <select id="Selecteur_Nombre" class="form-control" onchange="$('#Prix').html(this.value * {{ objItemShop.getPrix }})">
                        <option value="1" selected="selected">x1</option>
                        <option value="2">x2</option>
                        <option value="5">x5</option>
                        <option value="10">x10</option>
                        <option value="20">x20</option>
                        <option value="50">x50</option>
                    </select>
                </div>

                <div class="pull-right">
                    <button onclick="Valider_Mon_Achat({{ objItemShop.getId }}, $('#Selecteur_Nombre').val())" class="btn btn-primary btn-flat">
                        Payer
                    </button>
                </div>
            {% endif %}
        </div>
    </div>
</div>