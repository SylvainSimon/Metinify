<script type="text/javascript" src="pages/Marche/js/fonctions.min.js"></script>

<div class="row">
    <div class="col-lg-3 specialColumn" style="margin-bottom: 10px;">

        <select id="Selecteur_Filtre_Ventes_Race" class="select2" onchange="Ajax_Appel_Liste();">
            <option value="0">Toutes races</option>
            <option value="1">Guerriers</option>
            <option value="2">Suras</option>
            <option value="3">Ninjas</option>
            <option value="4">Shamans</option>
        </select>

        <select id="Selecteur_Filtre_Ventes_Sexe" class="select2 marginTop5" onchange="Ajax_Appel_Liste();">
            <option value="0">Tous sexe</option>
            <option value="1">Hommes</option>
            <option value="2">Femmes</option>
        </select>

        <select id="Selecteur_Filtre_Ventes_Level" class="select2 marginTop5" onchange="Ajax_Appel_Liste();">
            <option value="0">Tout niveau</option>
            <option value="1">De 1 à 100</option>
            <option value="2">De 101 à 200</option>
            <option value="3">De 201 à 270</option>
        </select>

        <select id="Selecteur_Filtre_Ventes_Ordre" class="select2 marginTop5" onchange="Ajax_Appel_Liste();">
            <option selected value="1">Ordre aléatoire</option>
            <option value="2">Prix croissant</option>
            <option value="3">Prix décroissant</option>
            <option value="4">Plus récentes</option>
            <option value="5">Plus anciennes</option>
        </select>

        <select id="Selecteur_Filtre_Ventes_Monnaie" class="select2 marginTop5" onchange="Ajax_Appel_Liste();">
            <option value="0">Toute devise</option>
            <option value="1">Vamonaies</option>
            <option value="2">Tananaies</option>
        </select>
    </div>
    
    <div class="col-lg-9 specialColumn">
        <div id="Tableau_Liste_Article">

            {{ viewArticles|raw }}

        </div>
    </div>
</div>