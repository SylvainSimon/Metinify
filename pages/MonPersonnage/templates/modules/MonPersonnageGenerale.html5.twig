<div class="col-lg-4">

    <div style="text-align: center; padding-top: 15px;">
        <h4>{{ objPlayer.getName }} - Niveau {{ objPlayer.getLevel }}</h4>

        {% if calculateGrade < 0 %}
            <h5 class="text-red" style="font-size: 16px;">{{ tabGrade[calculateGrade] }}</h5>
        {% else %}
            <h5 class="text-blue" style="font-size: 16px;">{{ tabGrade[calculateGrade] }}</h5>
        {% endif %}
    </div>

    <div style="padding-top: 5px; text-align: center; padding-bottom: 20px;">
        {% if objPlayer.getJob == "0" %}
            <img src="../images/races/Guerrier_Homme.png" style="width: 60%;" />
        {% elseif objPlayer.getJob == "1" %}
            <img src="../images/races/Ninja_Femme.png" style="width: 60%;" />
        {% elseif objPlayer.getJob == "2" %}
            <img src="../images/races/Sura_Homme.png" style="width: 60%;" />
        {% elseif objPlayer.getJob == "3" %}
            <img src="../images/races/Chaman_Femme.png" style="width: 60%;" />
        {% elseif objPlayer.getJob == "4" %}
            <img src="../images/races/Guerrier_Femme.png" style="width: 60%;" />
        {% elseif objPlayer.getJob == "5" %}
            <img src="../images/races/Ninja_Homme.png" style="width: 60%;" />
        {% elseif objPlayer.getJob == "6" %}
            <img src="../images/races/Sura_Femme.png" style="width: 60%;" />
        {% elseif objPlayer.getJob == "7" %}
            <img src="../images/races/Chaman_Homme.png" style="width: 60%;" />
        {% endif %}
    </div>

</div>

<div class="col-lg-5 specialColumn">

    <h4>Informations
        <span style="font-size: 14px; top: 3px; position: relative;" class="pull-right">{{ getMinutesToString(objPlayer.getPlaytime) }}</span>
    </h4>

    <div>
        Expérience
    </div>

    {{ include('experience_bubles.html5.twig', {'myScale': '0.25'}) }}

    {% if haveGuild %}
        <br/>
        <div style="display: inline; line-height: 10px;">
            {% if haveGuild.isMaster %}
                <i class="material-icons md-icon-person text-yellow"></i> Chef de la guilde
            {% else %}
                <i class="material-icons md-icon-person text-gray"></i> Membre de la guilde
            {% endif %}
        </div>
        {{ haveGuild.name }}
    {% endif %}

    <br/>
    <i class="material-icons md-icon-location text-orange"></i> {{ localisation.map }} <span class="text-yellow">{{ localisation.positionX }} - {{ localisation.positionY }}</span>

    {% if objMarriage %}
        <br/>
        <div>
            {% if isWomen(objMarriage.job) %}
                <i class="material-icons md-icon-people text-blue"></i> Marié à {{ objMarriage.name }}
            {% else %}
                <i class="material-icons md-icon-people text-fuchsia"></i> Mariée à {{ objMarriage.name }}
            {% endif %}
        </div>
    {% endif %}

    <div style="margin-top: 10px;">
    {{ include('player_stats.html5.twig') }}
    </div>

    <div class="row" style="padding-top: 10px;">
        <div class="col-lg-12">

            {% if config.mod_player.repairPosition.activate %}
                <button style="margin-bottom: 5px; width: 32.8%;" type="button" data-tooltip="Débloquer la position" class="btn btn-flat btn-warning" onclick="Deblocage_Personnage('{{ encrypt(objPlayer.getId) }}');">
                    Débloquer
                </button>
            {% endif %}

            {% if objPlayer.getGold < 0 %}
                <button style="margin-bottom: 5px; width: 32.8%;" type="button" data-tooltip="Débloquer mes yangs" class="btn btn-flat btn-warning" onclick="Deblocage_Yangs('{{ encryptForUrl(objPlayer.getId) }}');">
                    Débloquer les yangs
                </button>
            {% endif %}

            {% if config.mod_player.rename.activate %}
                <button style="margin-bottom: 5px; width: 32.8%;" type="button" class="btn btn-flat btn-primary" onclick="Ajax('pages/MonPersonnage/PersonnageRenameForm.php?idPlayer={{ encryptForUrl(objPlayer.getId) }}');">
                    Renommer
                </button>
            {% endif %}

            {% if config.mod_player.delete.activate %}
                <button style="margin-bottom: 5px; width: 32.8%;" type="button" class="btn btn-flat btn-danger" onclick="Ajax('pages/MonPersonnage/PersonnageDeleteForm.php?idPlayer={{ encryptForUrl(objPlayer.getId) }}');">
                    Supprimer
                </button>
            {% endif %}
        </div>
    </div>

</div>

<div class="col-lg-3 specialColumn" style="padding-top: 10px; padding-bottom: 10px;">
    {{ viewEquipement|raw }}
    {{ viewInventaire|raw }}

    <div style="background: #000000; height: 24px; width: 100%; border: 1px solid #6B645B; font-size: 12px; line-height: 23px; border-top: 0; padding-left: 5px; padding-right: 5px;">
        <span style="float: right;">{{ objPlayer.getGold|number_format }} Yang</span>
    </div>
</div>


<script type="text/javascript">
    Fonction_Reteneuse_Vamonaies({{ session.get("VamoNaies") }});
    Fonction_Reteneuse_Tananaies({{ session.get("TanaNaies") }});
</script>  